---
layout: layout
---

<!-- Page Header -->
<header class="intro-header" style="background-image: url('<%= config.root %><%= page["header-img"] || config["header-img"] %>')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 ">
                <div class="site-heading">
                    <h1><%= page.title || config.title %></h1>
                    <!--<hr class="small">-->
                    <span class="subheading"><%= page.description || config.subtitle || "" %></span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <!-- 标签云 -->
            <div id='tag_cloud' class="tags">
                <% site.tags.map(function(tag){  %>
                    <% if (tag.length != 0) { %>
                        <a href="#<%= tag.name %>" title="<%= tag.name %>" rel="<%= tag.length %>"> <%= tag.name %></a>
                    <% } %>
                <% }) %>
            </div>

            <!-- 标签列表 -->

            <% site.tags.map(function(tag){  %>
                <% if (tag.length != 0) { %>
                    <div class="one-tag-list">
                        <span class="fa fa-tag listing-seperator" id="<%= tag.name %>">
                            <span class="tag-text"><%= tag.name %></span>
                        </span>
                        <% tag.posts.map(function(post){  %>

                            <!--  <li class="listing-item">
                        <time datetime="<%=post.date.format("YYYY-MM-DD")%>"> <%=post.date.format("YYYY-MM-DD")%> </time>
                        <a href="<%- config.root %><%- post.path %>" title="<%= post.title %>">
                        
                        <%- post.title || "Untitled" %>
                        
                        </a>
                        </li> -->

                        <div class="post-preview">
                            <a href="<%- config.root %><%- post.path %>">
                                <h2 class="post-title">
                                    <%- post.title || "Untitled" %>
                                </h2>
                                <% if (post.subtitle && post.subtitle.length) { %>
                                    <h3 class="post-subtitle">
                                        <%- post.subtitle %>
                                    </h3>
                                <% } %>
                            </a>
                            <!-- <p class="post-meta"><%= post.date.format("YYYY-MM-DD")%></p> -->
                        </div>
                        <hr>
                        <% }) %>
                    </div>
                <% } %>
            <% }) %>


        </div>
    </div>
</div>
